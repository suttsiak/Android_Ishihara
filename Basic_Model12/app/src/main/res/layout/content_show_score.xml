<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_show_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.progolf.basic_model1.ShowScoreActivity"
    tools:showIn="@layout/activity_show_score">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Show Score"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="@dimen/h2"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="10/10"
        android:ems="10"
        android:id="@+id/txtShowScore"
        android:textSize="90sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Play agian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:textSize="@dimen/h3"
            android:onClick="ClickPlay"
            />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:textSize="@dimen/h3"
            tools:text="Exit"
            android:onClick="ClickExit"
            />
    </LinearLayout>
</RelativeLayout>
